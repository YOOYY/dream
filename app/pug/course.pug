extends ./share/container.pug
block config
    - var title = '课程分类';
    - var keywords = '课程分类';
    - var description = '课程分类';
    - var currentId = 'shop';
    - var mimgUrl = imgUrl+'shop/';
    -
        var list = ['course.html','fashon.html','art.html','music.html','sport.html','course.html'];
block css
    link(rel='stylesheet',href=cssUrl + 'shop.css')
block append main
    #course
        img.responsive(src=mimgUrl+"banner5.jpg", alt="")
        .container
            each val, index in list
                if index == 5
                    a.mr0.last(href=viewUrl+val) #[img(src=mimgUrl+"more.png", alt="")]
                else if (index+1)%3 == 0
                    a.mr0(href=viewUrl+val class="icon"+(index+1)) #[img(src=mimgUrl+"course"+(index+1)+".png", alt="")]
                else
                    a(href=viewUrl+val class="icon"+(index+1)) #[img(src=mimgUrl+"course"+(index+1)+".png", alt="")]
block append js