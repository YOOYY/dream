        li
            a(href='#')
                img.responsive(src=mimgUrl+'banner4.jpg' title='' alt='')
    #course.container.margintop
        .course_left
            a(href=viewUrl+'course.html') #[img(src=mimgUrl+"course.png", alt="")]
