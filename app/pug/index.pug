            a.col_1(href='#') #[img(src=mimgUrl+"course6.png", alt="")]
            a.col_2(href='#') #[img(src=mimgUrl+"course7.png", alt="")]
    #newlist.margintop
        .container
            h1 企业资讯
            ol.list
                each nval, nindex in nlist
                    li
                        a(href=viewUrl+nval.href)
