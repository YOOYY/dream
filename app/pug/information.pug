block css
    link(rel='stylesheet',href=cssUrl + 'news.css')
block append main
    #information
        .res_banner
            img.responsive(src=mimgUrl+"banner_bg.jpg", alt="")
            p 企业资讯
        .container
            ul.nav
                li.active #[a(href=viewUrl+'information.html') 所有]
                li #[a(href='#') 公司新闻]
                li #[a(href='#') 常见问题]
            ul.newslist
                each val, index in list
                    li(class=index%2==1?'mr0':'')
                        .time
                            .day #{val.day}
                            .line
                            .year #{val.date}
                        .list
                            a.title(href=viewUrl+val.href) #{val.title}
                            .des.ellipsis-wrap
                                .ellipsis #{val.des}
                            a.more(href=viewUrl+val.href) #[i(class='icon')]查看详情
            .page_div
                #page.page
block append js
    script(src=jsUrl+"pageMe.js")
    script.
        $("#page").paging({
            pageNum: 1, // 当前页面
            totalNum: 7, // 总页码
            totalList: 56, // 记录总数量
            callback: function (num) { //回调函数
                console.log(num);
            }
        });