    - var keywords = '音乐课程';
    - var description = '音乐课程';
    - var currentId = 'shop';
    - var mimgUrl = imgUrl+'shop/';
    -
        var list = [
            {href:'musicpage.html',text:'爵角音乐-音乐专业全年课程班（48节）'},
            {href:'music.html',text:'古琴&nbsp&nbsp周一周四 A班'},
            {href:'music.html',text:'古琴&nbsp&nbsp周二周五 B班（12节）'},
            {href:'music.html',text:'古琴&nbsp&nbsp每周五晚 C班'},
            {href:'music.html',text:'古琴&nbsp&nbsp周六 D班（12节）'},
            {href:'music.html',text:'古琴&nbsp&nbsp周六 E班（12节）'},
            {href:'music.html',text:'爵角音乐-音乐专业全年45课（45节）'},
            {href:'music.html',text:'音乐专业班 1元预约'},
            {href:'music.html',text:'爵角音乐-聚会明星养成计划（10节）'},
